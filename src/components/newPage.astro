/* CSS-Styles */
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Montserrat', sans-serif;
}

body {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #943636;
}

.container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card {
  position: relative;
  width: 300px;
  height: 400px;
  background: rgba(44, 53, 49, 1);
  box-shadow: 0 4px 30px rgb(192, 9, 9);
  backdrop-filter: blur(4px);
  border-radius: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(40px);
  background-clip: padding-box;
  box-shadow: 0 0 5px #FFCB9A, 0 0 15px #FFCB9A, 0 0 30px #FFCB9A, 0 0 60px #FFCB9A;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 1.5;
  transition: 0.5s;
}

.img {
  position: relative;
  top: 5vh;
  width: 150px;
  height: 150px;
  border-radius: 20%;
  overflow: hidden;
  border: 2px solid #FFCB9A;
}

.img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-content h3 {
  color: #D1E8E2;
  text-transform: uppercase;
  letter-spacing: 2px;
  font-weight: 500;
  font-size: 18px;
  text-align: center;
  margin: 30% 0 10px;
  line-height: 1.1em;
}

.card-content h3 span {
  font-size: 12px;
  font-weight: 300;
  text-transform: initial;
}

.sci {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

.sci li {
  list-style: none;
  margin: 0 10px;
  transform: translateY(40px);
  opacity: 0;
  transition: 0.5s;
  transition-delay: calc(0.1s * var(--i));
}

.sci li a {
  font-size: 24px;
}

.card:hover .content {
  opacity: 1;
  transform: translateY(-20px);
}

.card:hover .sci li {
  transform: translateY(0);
  opacity: 1;
}

/* Responsive Styles */
@media (max-width: 768px) {
  .card {
    width: 250px;
    height: 350px;
  }

  .img {
    width: 120px;
    height: 120px;
  }

  .card-content h3 {
    font-size: 16px;
  }

  .card-content h3 span {
    font-size: 10px;
  }

  .sci li a {
    font-size: 20px;
  }
}

